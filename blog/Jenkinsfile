pipeline {
    agent none

    stages {
        stage ('Build') {
            agent any
                
                steps {
                    echo 'Buduje aplikacje blog.'
                    sh "mkdir Aplikacja"
                    sh "cd Aplikacja"
                    sh "git clone https://github.com/JakubNajman/devops-exercise"
                    sh "cd devops-exercise"
                    sh "cd blog"
                    sh "docker-compose up --build"
                }
        }
    }
}